<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:orientation="vertical"
    app:layout_collapseParallaxMultiplier="1.0"
    android:background="@android:color/holo_blue_light">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="272dp"
        android:layout_weight="0.26">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView6"
            android:text="Welcome to Wireshark Technical Demonstrator"
            android:layout_weight="0.03"
            android:textSize="17sp"
            android:layout_marginTop="18dp"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Start Demonstrator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Lbegin "
            android:layout_weight="0.03"
            android:onClick="onLetsBeginButtonClick"
            android:layout_marginTop="80dp"
            android:layout_below="@+id/T_rahul_Name"
            android:textSize="24sp"
            android:background="@android:color/holo_green_light" />

        <TextView
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/T_rahul_Name"
            android:layout_weight="0.05"
            android:textSize="24sp"
            android:layout_marginTop="46dp"
            android:layout_below="@+id/textView6"
            android:layout_alignParentStart="true" />

        <Button
            android:text="Capture Packet"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/capture"
            android:layout_weight="0.03"
            android:layout_marginTop="17dp"
            android:textSize="24sp"
            android:layout_below="@+id/Lbegin "
            android:layout_alignParentStart="true"
            android:background="@android:color/holo_orange_light" />
    </RelativeLayout>

</LinearLayout>
